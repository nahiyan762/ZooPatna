<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="wrap_content"
	android:layout_height="50dp"
	android:clickable="true"
	android:background="@drawable/calendar_tile_small"

	>

	<ImageView
		android:id="@+id/calendar_day_cell"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
	</ImageView>

	<TextView
	    android:id="@+id/num_anv_events_per_day"
	    style="@style/calendar_event_style"
	    android:layout_width="10dip"
	    android:layout_height="10dip"
	    android:layout_marginTop="2dip"
	    android:layout_gravity="right"
	    android:layout_toRightOf="@+id/num_events_per_day"
	    android:textColor="#0066FF" >
	</TextView>

		<TextView
		    android:id="@+id/num_events_per_day"
		    style="@style/calendar_event_style"
		    android:layout_width="10dip"
		    android:layout_height="10dip"
		    android:layout_marginLeft="2dip"
		    android:layout_marginTop="2dip"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true" />

		<TextView
		    android:id="@+id/date_text"
		    style="@style/calendar_event_style"
		    android:layout_width="16dip"
		    android:layout_height="16dip"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:textSize="12sp" />
	
</RelativeLayout>